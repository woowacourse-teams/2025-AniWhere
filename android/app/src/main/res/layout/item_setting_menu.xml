<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="menuTitle"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_setting_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tv_setting_item_name"
            style="@style/TextView.Pretendard.SemiBold.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@{menuTitle}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="응원팀 수정" />


        <TextView
            android:id="@+id/tv_additional_info"
            style="@style/TextView.Esamanru.Medium.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:includeFontPadding="false"
            android:textColor="@color/gray500"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="KIA"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/tv_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/livetalk_stadium_select_arrow_description"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray500" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
