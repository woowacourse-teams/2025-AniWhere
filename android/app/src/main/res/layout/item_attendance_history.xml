<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_white_radius_12dp"
        android:padding="24dp">

        <TextView
            style="@style/TextView.Esamanru.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@color/team_kia"
            android:textSize="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9"
            tools:textColor="@color/team_kia" />

        <TextView
            android:id="@+id/tv_away_team_name"
            style="@style/TextView.Pretendard.SemiBold.20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KIA"
            app:layout_constraintEnd_toStartOf="@id/tv_vs"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="KIA" />

        <TextView
            android:id="@+id/tv_vs"
            style="@style/TextView.Pretendard.SemiBold.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="vs"
            app:layout_constraintBottom_toBottomOf="@id/tv_away_team_name"
            app:layout_constraintEnd_toStartOf="@id/tv_home_team_name"
            app:layout_constraintStart_toEndOf="@id/tv_away_team_name"
            app:layout_constraintTop_toTopOf="@id/tv_away_team_name" />

        <TextView
            android:id="@+id/tv_home_team_name"
            style="@style/TextView.Pretendard.SemiBold.20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="두산"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_vs"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="두산" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextView.Pretendard.Regular.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2025.08.01"
            android:textColor="@color/gray500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_away_team_name"
            tools:text="2025.08.01" />

        <TextView
            android:id="@+id/tv_stadium_name"
            style="@style/TextView.Pretendard.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠실 야구장"
            android:textColor="@color/gray500"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            tools:text="잠실 야구장" />

        <TextView
            style="@style/TextView.Esamanru.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/team_doosan"
            android:textSize="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5"
            tools:textColor="@color/team_doosan" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
