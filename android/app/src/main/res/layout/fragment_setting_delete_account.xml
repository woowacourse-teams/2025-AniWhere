<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.setting.SettingDeleteAccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_delete_account_illustration"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg_white_radius_12dp"
                android:contentDescription="@string/Setting_delete_account_illustration_description"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseball_leave_stadium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_setting_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_white_radius_12dp"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/iv_delete_account_illustration">

                <TextView
                    android:id="@+id/tv_delete_account_question"
                    style="@style/TextView.Pretendard.Bold.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_delete_account_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm"
                    style="@style/Widget.App.Button.Negative.Pretendard.Medium"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/setting_delete_account_confirm"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_delete_account_question" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    style="@style/Widget.App.Button.Positive.Pretendard.Medium"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_delete_account_cancel"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_confirm"
                    app:layout_constraintTop_toTopOf="@+id/btn_confirm" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
